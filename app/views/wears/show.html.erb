<div class="wrap">
    <div class="col text-right">
        <%= render 'layouts/user-nav' %>
    </div>
    <div class="jumbotron background-image1">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-8 col-lg-offset-2">
                        <div class="col-lg-12">
                            <% if @wear.images.attached? %>   
                                <div class="slider-show">
                                    <% @wear.images.each do |image| %>
                                        <div class="wear-image">
                                            <%= image_tag image.variant(combine_options:{resize:"450x450^",crop:"450x450+0+0",gravity: :center}).processed %>
                                        </div>
                                    <% end %>
                                </div>
                            <% end %>
                            <div class="col-lg-10 col-lg-offset-1 wear-nav">
                                <% if @wear.images.attached? %>  
                                    <div class="slider-nav">
                                        <% @wear.images.each do |image| %>
                                            <div class="wear-image">
                                                <%= image_tag image.variant(combine_options:{resize:"100x100^",crop:"100x100+0+0",gravity: :center}).processed %>
                                            </div>
                                        <% end %>
                                    </div>
                                <% end %>
                            </div>
                        </div>
                        <div class="col-lg-12 wear-box1">   
                            <div class="col-lg-12">
                                <h1 class="text-center">nmist_select<i class="far fa-paper-plane"></i></h1>
                            </div>                
                            <div class="col-lg-10 col-lg-offset-1 wear-show-contesnts1">
                                <div class="col-lg-12">
                                    <div class="col-lg-4 show-box">
                                        <h2 class="text-center">NAME<i class="fas fa-hand-point-down"></i></h2>
                                    </div>
                                </div> 
                                <div class="col-lg-12">
                                    <h2 class="text-center"><%= @wear.name %><i class="fas fa-cannabis"></i></h2>
                                </div>
                            </div>
                            <div class="col-lg-10 col-lg-offset-1 wear-show-contesnts">
                                <div class="col-lg-12">
                                    <div class="col-lg-4 show-box">
                                        <h2 class="text-center">PRICE<i class="fas fa-hand-point-down"></i></h2>
                                    </div>
                                 </div> 
                                 <div class="col-lg-12">  
                                    <h2 class="text-center">¥<%= @wear.price %><i class="fas fa-cannabis"></i></h2>
                                </div> 
                            </div>
                            <div class="col-lg-10 col-lg-offset-1 wear-show-contesnts">
                                <div class="col-lg-12">
                                    <div class="col-lg-5 show-box">
                                        <h2 class="text-center">TYPE&SIZE<i class="fas fa-hand-point-down"></i></h2>
                                    </div>
                                </div> 
                                <div class="col-lg-12">
                                    <h2 class="text-center">・<%= @wear.type.name %><i class="fas fa-cannabis"></i>       ・<%= @wear.size.name %><i class="fas fa-cannabis"></i></h2>
                                </div>
                            </div>
                            <div class="col-lg-10 col-lg-offset-1 wear-show-contesnts">
                                <div class="col-lg-12">
                                    <div class="col-lg-7 show-box">
                                        <h2 class="text-center">INTRODUCTION<i class="fas fa-hand-point-down"></i></h2>
                                    </div>
                                </div> 
                                <div class="col-lg-12">
                                    <h2 class="text-center"><%= @wear.introduction %><i class="fas fa-cannabis"></i></h2>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <h1 class="text-center">
                                    <%= link_to "https://www.instagram.com/nmist_select/?hl=ja" do %>
                                        <i class="fab fa-instagram"></i>
                                    <% end %>
                                    <%= link_to "https://www.instagram.com/nmist_select/?hl=ja" do %>
                                        <i class="fab fa-twitter-square"></i>
                                    <% end %>
                                    <%= link_to "https://www.instagram.com/nmist_select/?hl=ja" do %>
                                        <i class="fab fa-facebook-square"></i>
                                    <% end %>
                                    <div class="col text-right">
                                        <%= link_to "https://nmistselect7.thebase.in/" do %>
                                            <h4>購入サイトに進む<i class="fas fa-cannabis"></i></h4>
                                        <% end %>
                                    </div>
                                </h1>
                            </div>                      
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
Pace.on('done', function(){
      $('.wrap').fadeIn();
      $('.slider-show').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        arrows: false,
        fade: true,
        asNavFor: '.slider-nav'
      });
      $('.slider-nav').slick({
        slidesToShow: 3,
        slidesToScroll: 1,
        asNavFor: '.slider-show',
        dots: true,
        centerMode: true,
        focusOnSelect: true
    });
 })
</script>


